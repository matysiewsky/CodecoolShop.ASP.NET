@model Codecool.CodecoolShop.ViewModels.OrderViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>

<form method="post" asp-action="CompletingOrderPayment" class="form-horizontal" role="form">

    <div asp-validation-summary="All" class="text-danger"></div>


    <div class="form-group">
        <label asp-for="@Model.ValidatorCreditCardModel.CreditCardHolder" class="col-md-2 control-label">Card holder:</label>
        <div class="col-md-5">
            <input asp-for="@Model.ValidatorCreditCardModel.CreditCardHolder" class="form-control" />
            <span asp-validation-for="@Model.ValidatorCreditCardModel.CreditCardHolder" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ValidatorCreditCardModel.CreditCardNumber" class="col-md-2 control-label">Last name:</label>
        <div class="col-md-5">
            <input asp-for="@Model.ValidatorCreditCardModel.CreditCardNumber" class="form-control" />
            <span asp-validation-for="@Model.ValidatorCreditCardModel.CreditCardNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ValidatorCreditCardModel.CreditCardExpiration" class="col-md-2 control-label">E-mail</label>
        <div class="col-md-5">
            <input asp-for="@Model.ValidatorCreditCardModel.CreditCardExpiration" class="form-control" />
            <span asp-validation-for="@Model.ValidatorCreditCardModel.CreditCardExpiration" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ValidatorCreditCardModel.CreditCardCvc" class="col-md-2 control-label">Phone number:</label>
        <div class="col-md-5">
            <input asp-for="@Model.ValidatorCreditCardModel.CreditCardCvc" class="form-control" />
            <span asp-validation-for="@Model.ValidatorCreditCardModel.CreditCardCvc" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Continue to payment" />
        </div>
    </div>

</form>